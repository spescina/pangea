{
	"name": "psimone/pangea",
	"description": "Pangea Installation",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
                "spescina/imgproxy": "dev-develop",
                "spescina/mediabrowser": "dev-develop",
                "spescina/platform-core": "dev-master",
		"barryvdh/laravel-debugbar": "1.*",
		"barryvdh/laravel-ide-helper": "1.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-4": {
			"Spescina\\PlatformCore\\": "app/platform-core"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan ide-helper:generate",
                        "php artisan debugbar:publish",
                        "php artisan asset:publish spescina/mediabrowser",
                        "php artisan asset:publish spescina/imgproxy",
                        "php artisan asset:publish spescina/platform-core",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
